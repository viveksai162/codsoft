#include <iostream>
#include <vector>
#include <string>

// Display board
void displayBoard(std::vector<std::string> &board) {
    for (int i = 0; i < 3; i++) {
        for (int j = 0; j < 3; j++) {
            std::cout << board[i * 3 + j] << " ";
        }
        std::cout << std::endl;
    }
}

// Check for a win
bool checkWin(std::vector<std::string> &board, std::string player) {
    // Check rows and columns
    for (int i = 0; i < 3; i++) {
        bool rowWin = true;
        bool colWin = true;
        for (int j = 0; j < 3; j++) {
            rowWin &= (board[i * 3 + j] == player);
            colWin &= (board[j * 3 + i] == player);
        }
        if (rowWin || colWin) {
            return true;
        }
    }

    // Check diagonals
    bool diagWin1 = true;
    bool diagWin2 = true;
    for (int i = 0; i < 3; i++) {
        diagWin1 &= (board[i * 3 + i] == player);
        diagWin2 &= (board[i * 3 + (2 - i)] == player);
    }
    if (diagWin1 || diagWin2) {
        return true;
    }

    return false;
}

// Check for a draw
bool checkDraw(std::vector<std::string> &board) {
    for (int i = 0; i < 3; i++) {
        for (int j = 0; j < 3; j++) {
            if (board[i * 3 + j] == " ") {
                return false;
            }
        }
    }
    return true;
}

int main() {
    std::vector<std::string> board(9, " ");
    std::string player = "X";

    while (true) {
        // Display board
        displayBoard(board);

        // Check for a win or draw
        if (checkWin(board, player)) {
            std::cout << "Player " << player << " wins!" << std::endl;
            break;
        } else if (checkDraw(board)) {
            std::cout << "It's a draw!" << std::endl;
            break;
        }

        // Player input
        int row, col;
        std::cout << "Player " << player << ", enter your move (row and column number from 1 to 3): ";
        std::cin >> row >> col;

        // Update board
        if (board[(row - 1) * 3 + (col - 1)] == " ") {
            board[(row - 1) * 3 + (col - 1)] = player;
        } else {
            std::cout << "Invalid move. Try again." << std::endl;
            continue;
        }

        // Switch players
        player = (player == "X") ? "O" : "X";
    }

    // Play again
    char playAgain;
    std::cout << "Do you want to play again? (y/n): ";
    std::cin >> playAgain;
    if (playAgain == 'y' || playAgain == 'Y') {
        main();
    }

    return 0;
}



